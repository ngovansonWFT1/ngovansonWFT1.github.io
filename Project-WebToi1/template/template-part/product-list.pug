extends layout.pug

block header 
    title Sstore - Danh sách sản phẩm

block content
    section.product-list
        .container
            .row
                .col-md-4
                    .filter-product

                        .filter-by-brand.filter-prd
                            .title-brand
                                h4 Thương hiệu
                            .form-check
                                .your-choose
                                    input#defaultCheck1-1.form-check-input(type='checkbox' value='')
                                    label.form-check-label(for='defaultCheck1-1')
                                        | Samsung
                                .your-choose
                                    input#defaultCheck2-1.form-check-input(type='checkbox' value='')
                                    label.form-check-label(for='defaultCheck2-1')
                                        | Crucial
                                .your-choose
                                    input#defaultCheck3-1.form-check-input(type='checkbox' value='')
                                    label.form-check-label(for='defaultCheck3-1')
                                        | Sandisk
                                .your-choose
                                    input#defaultCheck4-1.form-check-input(type='checkbox' value='')
                                    label.form-check-label(for='defaultCheck4-1')
                                        | Kingston
                                .your-choose
                                    input#defaultCheck5-1.form-check-input(type='checkbox' value='')
                                    label.form-check-label(for='defaultCheck5-1')
                                        | Intel
                                .your-choose
                                    input#defaultCheck6-1.form-check-input(type='checkbox' value='')
                                    label.form-check-label(for='defaultCheck6-1')
                                        | Western Digital
                        .filter-by-size-standard.filter-prd
                            .title-standard
                                h4 Chuẩn ổ cứng
                            .form-check
                                .your-choose
                                    input#defaultCheck1-2.form-check-input(type='checkbox' value='')
                                    label.form-check-label(for='defaultCheck1-2')
                                        | 2.5 inch
                                .your-choose
                                    input#defaultCheck2-2.form-check-input(type='checkbox' value='')
                                    label.form-check-label(for='defaultCheck2-2')
                                        | mSata
                                .your-choose
                                    input#defaultCheck3-2.form-check-input(type='checkbox' value='')
                                    label.form-check-label(for='defaultCheck3-2')
                                        | M.2 Sata
                                .your-choose
                                    input#defaultCheck4-2.form-check-input(type='checkbox' value='')
                                    label.form-check-label(for='defaultCheck4-2')
                                        | M.2 PCIe
                        .filter-by-price.filter-prd
                            .title-price
                                h4 Giá sản phẩm
                            .form-check
                                .your-choose
                                    input#defaultCheck1-3.form-check-input(type='checkbox' value='')
                                    label.form-check-label(for='defaultCheck1-3')
                                        | 500.000 - 1.000.000
                                .your-choose
                                    input#defaultCheck2-3.form-check-input(type='checkbox' value='')
                                    label.form-check-label(for='defaultCheck2-3')
                                        | 1.000.000 - 1.500.000
                                .your-choose
                                    input#defaultCheck3-3.form-check-input(type='checkbox' value='')
                                    label.form-check-label(for='defaultCheck3-3')
                                        | 1.500.000 - 2.000.000
                                .your-choose
                                    input#defaultCheck4-3.form-check-input(type='checkbox' value='')
                                    label.form-check-label(for='defaultCheck4-3')
                                        | 2.000.000 - 3.000.000
                                .your-choose
                                    input#defaultCheck5-3.form-check-input(type='checkbox' value='')
                                    label.form-check-label(for='defaultCheck5-3')
                                        | 3.000.000 - 5.000.000
                                .your-choose
                                    input#defaultCheck6-3.form-check-input(type='checkbox' value='')
                                    label.form-check-label(for='defaultCheck6-3')
                                        | 5.000.000 - 10.000.000
                        .filter-by-capacity.filter-prd
                            .title-capacity
                                h4 Dung lượng
                            .form-check
                                .your-choose
                                    input#defaultCheck1-4.form-check-input(type='checkbox' value='')
                                    label.form-check-label(for='defaultCheck1-4')
                                        | 120 -128 GB
                                .your-choose
                                    input#defaultCheck2-4.form-check-input(type='checkbox' value='')
                                    label.form-check-label(for='defaultCheck2-4')
                                        | 240 - 256 GB
                                .your-choose
                                    input#defaultCheck3-4.form-check-input(type='checkbox' value='')
                                    label.form-check-label(for='defaultCheck3-4')
                                        | 480 -512 GB
                                .your-choose
                                    input#defaultCheck4-4.form-check-input(type='checkbox' value='')
                                    label.form-check-label(for='defaultCheck4-4')
                                        | 960 GB - 1TB
                        
                .col-md-8
                    .product-list-filtered
                        .title-top-change-layout-prd
                            .title-product
                                h5 Ổ cứng SSD
                            .layout-and-sort
                                .list-icon 
                                    img(src="./../images/product-list/list-disactive.svg", alt="list-icon")
                                .grid-icon
                                    img(src="./../images/product-list/grid-active.svg", alt="grid-icon")
                                .dropdown
                                    button#dropdownMenuButton.btn.btn-secondary.dropdown-toggle.sale-prd(type='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                                        | Mặc định
                                    .dropdown-menu.sale-prd(aria-labelledby='dropdownMenuButton')
                                        a.dropdown-item(href='#') Mặc định
                                        a.dropdown-item(href='#') A - Z
                                        a.dropdown-item(href='#') Z - A
                                        a.dropdown-item(href='#') Giá tăng dần
                                        a.dropdown-item(href='#') Giá giảm dần
                        .grid-product-list
                            
                    

